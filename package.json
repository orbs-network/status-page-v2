{
  "name": "@orbs-network/status-page-v2",
  "private": true,
  "version": "0.7.0",
  "description": "Web based status page for Orbs Network (for V2)",
  "author": "Noam Berg <noam.berg@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.js"
  ],
  "engines": {
    "node": ">=12.13.0"
  },
  "scripts": {
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint . --ext .ts,.tsx -f codeframe",
    "pretest": "npm run typecheck && npm run lint",
    "clean": "rimraf ./dist/",
    "prebuild": "npm run clean",
    "heroku-prebuild": "cd src/status-page-client && npm i && npm run build",
    "build": "tsc --skipLibCheck -p ./tsconfig.prod.json && npm run copy_client_build",
    "copy_client_build": "mkdir -p ./dist/status-page-client/build && cp -r src/status-page-client/build/ ./dist/status-page-client/",
    "test": "ava --verbose --timeout=10m --serial",
    "test:quick": "echo '-- TEST --' && ava --verbose --timeout=10m --serial",
    "test:e2e": "ava --verbose --timeout=10m --serial --config ./ava.config.e2e.js",
    "prepack": "npm run build",
    "prettify": "npx prettier \"src/**/*.ts\" --write",
    "dev": "npm run build && open http://localhost:8081/json && nodemon -e js,ts --watch src --exec npm run start:dev",
    "start:dev": "npm run build && npm start",
    "start": "node --async-stack-traces ./dist/main.js",
    "gitAddRemoteHeroku": "heroku login",
    "deployHeroku": "git push heroku master",
    "testpos": "npm run build && node --async-stack-traces ./dist/test.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.32",
    "@types/node-fetch": "^2.5.5",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "ava": "^3.5.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.1",
    "typescript": "~3.7.5"
  },
  "dependencies": {
    "@makerdao/multicall": "^0.11.0",
    "@orbs-network/orbs-ethereum-contracts-v2": "0.0.38",
    "@slack/web-api": "^5.12.0",
    "bignumber.js": "^9.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1",
    "ts-retry-promise": "^0.5.0",
    "web3": "^1.3.0",
    "yargs": "^15.3.1"
  }
}
